@model Product
@{
    ViewBag.Title = "Edit";
}

<div class="action-form">
    <form id="editProduct">
        <h2>Edit Product</h2>
        <div class="form-group">
            <input type="hidden" name="ID" value="@Model.ID"/>

            <label>Name</label>
            <input name="Name" value="@Model.Name"/>
            <br/>

            <label>Description</label>
            <input name="Description" value="@Model.Description"/>
            <br/>

            <label>Category</label>
            <input name="Category" value="@Model.Category"/>
            <br/>

            <label>Price</label>
            <input name="Price" value="@Model.Price"/>
            <br/>

            <button id="updateBtn" type="button" class="btn btn-primary update-btn">Update</button>
        </div>
    </form>
</div>
<script>
    jQuery(document).ready(function() {

    jQuery(".update-btn").click(function (e) {
        e.preventDefault();
        jQuery.ajax({
                type: 'POST',
                url: '/Product/Edit',
                data: jQuery("#editProduct").serialize()
            })
            .done(function (response) {
                jQuery(".ProductTable").html(response);
                jQuery("#editProduct").hide();
            })
            .fail(function () {
                alert("Fail");
            });
    });

    });
</script>